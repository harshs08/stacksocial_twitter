<div class="container">

  <%= render :partial => "search" %>
  <div class="row">
    <div class="span6 offset3">
      <% if @tweets.present? %>
        <% flash.now[:success] = "Tweets for #{@username}" %>
        <% @tweets.each do |t| %>
          <p><%=extract_link(t.text) %></p>
        <% end %>
      <% else %>
        <p>Please Search for a valid twittter handle.</p>
      <% end %>
    </div>
  </div>

</div>